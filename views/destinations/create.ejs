<% layout('layouts/app') %>  

<h1 class="text-center text-2xl font-bold text-gray-800 mb-6">Add Destination</h1> 
<div class="w-full max-w-md mx-auto bg-white p-6 rounded-lg shadow-md mb-8">
  <form action="/destinations" method="post" enctype="multipart/form-data">
    <div class='mb-3'>
      <label for="name" class='block text-sm font-medium text-gray-700'>Name</label>
      <input type="text" name="destination[name]" id="name" class='mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm' required>
    </div>
    <div class='mb-3'>
      <label for="location" class='block text-sm font-medium text-gray-700'>Location</label>
      <input type="text" name="destination[location]" id="location" class='mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm' required>
    </div>
    <div class='mb-3'>
      <label for="description" class='block text-sm font-medium text-gray-700'>Description</label>
      <textarea name="destination[description]" id="description" class='mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm' required></textarea>
    </div>
    <div class='mb-3'>
      <label for="city" class='block text-sm font-medium text-gray-700'>City</label>
      <input type="text" name="destination[city]" id="city" class='mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm' required>
    </div>
    <div class='mb-3'>
      <label for="phone" class='block text-sm font-medium text-gray-700'>Phone Number</label>
      <input type="text" name="destination[phone]" id="phone" class='mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm' required>
    </div>
    <div class='mb-3'>
      <label for="price" class='block text-sm font-medium text-gray-700'>Price</label>
      <input type="number" name="destination[price]" id="price" class='mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm' required>
    </div>
    <div class='mb-3'>
      <label for="image" class='block text-sm font-medium text-gray-700'>Image</label>
      <input type="file" name="image" id="image" accept="image/*" multiple required>
    </div>
    <button type='submit' class='p-4 px-4 py-2 bg-green-500 text-white font-semibold rounded-md text-sm whitespace-nowrap'>Submit</button>
  </form>
</div>