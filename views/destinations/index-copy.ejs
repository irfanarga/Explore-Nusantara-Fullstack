
<% layout('layouts/app') %>  

<h1>All Destinations</h1>

<% for (const destination of destinations) { %>
    <div class="card mb-3">
      <div class="row">
        <div class="col-md-4">
          <img src="/images/<%= destination.images[0].filename %>" alt="<%= destination.name %>" class="img-fluid">
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title"><%= destination.name %></h5>
            <p class="card-text"><%= destination.description %></p>
            <p class="card-text">
              <small class="text-secondary"><%= destination.location %></small>
            </p>
            <a href="/destinations/<%= destination._id %>" class="btn btn-primary">View <%= destination.name %></a>
          </div>
        </div>
      </div>
    </div>
<% } %>
